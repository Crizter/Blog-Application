
<%- include('partials/header', { title: 'All Blogs' }) %>
    <div class='bg-black h-screen text-white flex flex-col items-center justify-center'>
        <div class='h-auto w-96 border-2 border-white p-8 flex justify-center text-pink-500'>
            <form id='createBlog' method="POST" class="space-y-6 w-full">
                <div class='flex flex-col'>
                    <label for="title" class="text-xl font-semibold mb-2">Title</label>
                    <input type="text" id="title" name="title" class="p-2 border border-gray-300 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-pink-500">
                </div>
                <div class='flex flex-col'>
                    <label for="description" class="text-xl font-semibold mb-2">Describe your blog</label>
                    <textarea id="description" name="description" class="p-2 border border-gray-300 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-pink-500 h-24"></textarea>
                </div>
                <div class='flex flex-col'>
                    <label for="content" class="text-xl font-semibold mb-2">Content</label>
                    <textarea id="content" name="content" class="p-2 border border-gray-300 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-pink-500 h-32"></textarea>
                </div>
                <button type="submit" class="w-full bg-pink-500 text-white font-semibold p-2 rounded hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-500">
                    Create Blog
                </button>
            </form>
        </div>
    </div>
    <%- include('partials/footer') %>
</html>
